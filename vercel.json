{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/apps/watch-together",
  "builds": [
    {
      "src": "apps/backend-api/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dist/apps/watch-together/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/socket.io/(.*)",
      "dest": "apps/backend-api/src/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/backend-api/src/index.ts"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "apps/watch-together/index.html"
    }
  ]
}
